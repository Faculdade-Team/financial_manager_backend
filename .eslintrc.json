{
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/semi": ["error", "never"],
      "prettier/prettier": ["error", {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none"
      }],
      "no-console": "warn",
      "no-unused-vars": "warn"
    }
  }
  